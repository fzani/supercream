  <DataSets>
    <DataSet Name="DataSet1">
      <Fields>
        <Field Name="VatExemptible">
          <DataField>VatExemptible</DataField>
          <rd:TypeName>System.Decimal</rd:TypeName>
        </Field>
        <Field Name="VatNotExemptible">
          <DataField>VatNotExemptible</DataField>
          <rd:TypeName>System.Decimal</rd:TypeName>
        </Field>
      </Fields>
      <Query>
        <DataSourceName>SCDataSource</DataSourceName>
        <CommandText>DECLARE @VatExemptible Decimal(10,2),
	@VatNotExemptible Decimal(10,2)

SELECT @VatExemptible = SUM(NoOfUnits * Price) FROM OrderHeader oh
INNER JOIN OrderLine ol ON
	oh.ID = ol.OrderID
INNER JOIN Product p ON
	p.ID = ol.ProductID
WHERE OrderStatus IN (2,3,6,7) AND p.VatExempt = 1
AND (oh.DeliveryDate = @StartDate)

SELECT @VatNotExemptible = SUM(NoOfUnits * Price) FROM OrderHeader oh
INNER JOIN OrderLine ol ON
	oh.ID = ol.OrderID
INNER JOIN Product p ON
	p.ID = ol.ProductID
WHERE OrderStatus IN (2,3,6,7) AND p.VatExempt = 0
AND (oh.DeliveryDate = @StartDate)

SELECT @VatExemptible VatExemptible, @VatNotExemptible AS VatNotExemptible</CommandText>
        <QueryParameters>
          <QueryParameter Name="@StartDate">
            <Value>=Parameters!StartDate.Value</Value>
          </QueryParameter>
        </QueryParameters>
        <rd:UseGenericDesigner>true</rd:UseGenericDesigner>
      </Query>
    </DataSet>
  </DataSets>
